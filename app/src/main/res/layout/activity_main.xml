<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6495ed"
    >


    <TextView
        android:id="@+id/textView_mainpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find.no"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/showallproducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:text="All products"
        android:textColor="#6495ed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_mainpage"
        app:layout_constraintVertical_bias="0.121" />

    <Button
        android:id="@+id/textViewAdmin"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Delete a User or product"
        android:textColor="#6495ed"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Promo"
        app:layout_constraintVertical_bias="0.097"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Promo"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Promo Code"
        android:textColor="#6495ed"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FavoritesList"
        app:layout_constraintVertical_bias="0.061"
        tools:visibility="visible" />

    <Button
        android:id="@+id/addProduct"
        android:layout_width="198dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6495ed"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Add Product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showallproducts"
        app:layout_constraintVertical_bias="0.055"
        tools:visibility="visible" />

    <Button
        android:id="@+id/viewMyProducts"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="View my listings"
        android:textColor="#6495ed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProduct"
        app:layout_constraintVertical_bias="0.046"
        tools:visibility="visible" />

    <Button
        android:id="@+id/FavoritesList"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Favorites"
        android:textColor="#6495ed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Orders"
        app:layout_constraintVertical_bias="0.057"
        tools:visibility="visible" />

    <Button
        android:id="@+id/Orders"
        android:layout_width="198dp"
        android:layout_height="52dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Orders"
        android:textColor="#6495ed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMyProducts"
        app:layout_constraintVertical_bias="0.051"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/welcomemessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/showallproducts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_mainpage"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/DeleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF0000"
        android:text="DeleteUser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdmin"
        app:layout_constraintVertical_bias="0.341" />


</androidx.constraintlayout.widget.ConstraintLayout>